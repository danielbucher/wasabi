<%= form_for(@lead) do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% @lead.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :mobile_phone %><br>
    <%= f.text_field :mobile_phone, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :position_id %><br>
    <%= f.select :position_id, Position.all.collect { |p| [p.name, p.id] },
          {}, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :tool_id %><br>
    <%= f.select :tool_id, Tool.all.collect { |t| [t.name, t.id] },
          {}, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :team_size %><br>
    <%= f.text_field :team_size, class: "form-control" %>
  </div>

  <div class="actions">
    <%= submit_tag "Cadastrar", class: 'btn btn-primary btn-lg btn-full' %>
  </div>
<% end %>
