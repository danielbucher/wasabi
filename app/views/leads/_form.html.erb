<%= form_for(@lead) do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% @lead.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= label_tag :name, "Nome" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= label_tag :email, "E-mail" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= label_tag :twitter %>
    <%= f.text_field :twitter, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= label_tag :mobile_phone, "Celular" %>
    <%= f.text_field :mobile_phone, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= label_tag :position_id, "Cargo" %>
    <%= f.select :position_id, Position.all.collect { |p| [p.name, p.id] },
          {}, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= label_tag :tool_id, "Qual ferramenta vocÃª utiliza para organizar e acompanhar suas vendas?" %>
    <%= f.select :tool_id, Tool.all.collect { |t| [t.name, t.id] },
          {}, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= label_tag :team_size, "Tamanho da sua Equipe Comercial" %>
    <%= f.select :team_size, Lead::TEAM_SIZES.map { |s| [s, s] },
          { include_blank: true }, class: "form-control" %>
  </div>

  <div class="actions">
    <%= submit_tag "Concorrer ao iPhone", class: 'btn btn-primary btn-lg btn-full' %>
  </div>
<% end %>
